<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Main content of the screen -->
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/content_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_open_nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fadingEdge="none|horizontal"
                android:padding="20dp"
                android:src="@drawable/ic_menu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_menu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/home_title"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@+id/upcoming_events_text"
                app:layout_constraintEnd_toStartOf="@+id/btn_open_settings"
                app:layout_constraintStart_toEndOf="@+id/btn_open_nav"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btn_open_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fadingEdge="none|horizontal"
                android:padding="20dp"
                android:src="@drawable/ic_settings"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/upcoming_events_text"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:text="@string/upcoming_events_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_open_nav" />

            <TextView
                android:id="@+id/nearby_events_text"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:text="@string/nearby_events_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/upcoming_events_recycler" />

            <TextView
                android:id="@+id/recommended_events_text"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:text="@string/recommended_events_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nearby_events_recycler" />

            <TextView
                android:id="@+id/sponsored_events_text"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:text="@string/sponsored_events_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recommended_events_recycler" />

            <TextView
                android:id="@+id/popular_events_text"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:text="@string/popular_events_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sponsored_events_recycler" />

            <TextView
                android:id="@+id/top10_events_text"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:text="@string/top10_events_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/popular_events_recycler" />

            <TextView
                android:id="@+id/new_events_text"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:text="@string/new_events_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/top10_events_recycler" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recommended_events_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recommended_events_text" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/upcoming_events_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/upcoming_events_text" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/nearby_events_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nearby_events_text" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/sponsored_events_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sponsored_events_text" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/popular_events_recycler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/popular_events_text" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/top10_events_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/top10_events_text" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/new_events_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/new_events_text" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

    <!-- Contents of nav drawer -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/navigation_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/bottom_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nav_bottom_settings" />

            <TextView
                android:id="@+id/bottom_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nav_bottom_help" />

            <TextView
                android:id="@+id/bottom_contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nav_bottom_contact_us" />

            <TextView
                android:id="@+id/bottom_send_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nav_bottom_send_feedback" />

            <TextView
                android:id="@+id/bottom_privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nav_bottom_privacy_policy" />

            <TextView
                android:id="@+id/bottom_tos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nav_bottom_tos" />

        </LinearLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>